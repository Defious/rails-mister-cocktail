<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo.key %>')">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
  <div class="descrition">
    <div>
      <p><strong>Description</strong></p>
      <% @cocktail.doses.each do |dose| %>
        <p><%= dose.description %></p>
      <% end %>
    </div>
    <div>
      <p><strong>Ingredients</strong></p>
        <% @cocktail.ingredients.each do |ingredient| %>
      <p><%= ingredient.name %></p>
      <% end %>
    </div>
  </div>
</div>


<div class="d-flex justify-content-around mt-3">
  <div>
    <h4 class="lign"><%= link_to "Back", root_path %></h4>
  </div>
  <div>
    <h4 class="lign"><%= link_to "Add doses", new_cocktail_dose_path(@cocktail) %></h4>
  </div>
</div>
