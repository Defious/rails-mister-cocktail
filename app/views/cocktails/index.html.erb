<h1 class="text-center mb-3">Cocktails</h1>


<div class="cards">
  <div class="card-category">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail.id) do %>
      <div class="card-trip mx-2">
        <%= cl_image_tag cocktail.photo.key %>
       <div class="card-trip-infos">
          <h3><%= cocktail.name %></h3>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>



